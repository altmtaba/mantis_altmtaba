{
  "type": "object",
  "comment": "ListView",
  "properties": {
    "listItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "action",
            "control": "action.link",
            "selector": "td a[href^=\"/mantisbt/view.php?id=\"]"
          },
          "icon": {
            "type": "string",
            "selector": "tr td a",
            "control": "property.innerHTML"
          },
          "text1": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 6
          },
          "text2": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 10
          },
          "text3": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 7
          }
        }
      },
      "update": {
        "type": "none"
      },
      "selectorAll": "#buglist tr[bgcolor]"
    },
    "isViewIssues": {
      "type": "identifier",
      "selector": "#buglist td.form-title span.floatleft",
      "control": "exists",
      "selectContains": "Viewing Issues"
    }
  },
  "connect": [
    {
      "match": [
        "isViewIssues"
      ],
      "screens": [
        "viewissues"
      ]
    }
  ]
}
